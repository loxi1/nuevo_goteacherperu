---
import Image from '~/components/common/Image.astro';

const {
    url1 = await Astro.slots.render('url1'),
    url2 = await Astro.slots.render('url2'),
    url3 = await Astro.slots.render('url3'),  
    image1 = await Astro.slots.render('image1'),
    image2 = await Astro.slots.render('image2'),
    image3 = await Astro.slots.render('image3'),
