---
import Contactanos from '~/components/widgets/Contactanos.astro';

const {
    info = await Astro.slots.render('info')
} = Astro.props
---

<section class="bg-white">
    <div class="mx-auto max-w-screen-xl px-4 py-12 sm:px-6 md:py-16 lg:px-8">
      <div class="mx-auto max-w-3xl text-center">
        { info && (
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">{info.title}</h2>

        <p class="mt-4 text-gray-500 sm:text-xl">{info.desc}</p>
        )
        }
        <div class="mt-10">
          <Contactanos/>
        </div>
      </div>
    </div>
  </section>