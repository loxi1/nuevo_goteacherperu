                                    <img alt="gallery" class="w-full hover:border-2 hover:border-principal hover:scale-125 h-full object-cover object-center block" src="/images/gallery/flor.jpg">
                                    </div>
                                </div>
                                <div class="flex flex-wrap w-1/2">
                                    <div class="md:p-2 p-1 w-full">
                                        <img alt="gallery" class="w-full hover:border-2 hover:border-principal hover:scale-125 h-full object-cover object-center block" src="/images/gallery/mariposa.jpg">
                                        </div>
                                        <div class="md:p-2 p-1 w-1/2">
                                        <img alt="gallery" class="w-full hover:border-2 hover:border-principal hover:scale-125 object-cover h-full object-center block" src="/images/gallery/grench.jpg">
                                    </div>
                                    <div class="md:p-2 p-1 w-1/2">
                                        <img alt="gallery" class="w-full hover:border-2 hover:border-principal hover:scale-125 object-cover h-full object-center block" src="/images/gallery/buho.jpg">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>                
                </div>
            </main>
    </main>
</Layout>